package templates

import "github.com/sentientbottleofwine/osmium/teamserver"

templ TaskResultsView() {
<div id="taks-results-view">
    <h1>Task Results</h1>
    <div id="task-results-body"></div>
</div>
}

templ TaskResults(taskResults []teamserver.TaskResultOut) {
for _, taskResult := range taskResults {
<div x-data="{ open: false }">
    <button @click="open = !open" x-text="open ? '🞁' : '🞃'">🞃</button>
    <p>Task: { taskResult.Task }</p>
    <p x-show="open" @click.outside="open = false">Output { taskResult.Output }</p>
</div>
}
}
