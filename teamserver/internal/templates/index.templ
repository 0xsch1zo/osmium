package templates

templ Dashboard(agentsView templ.Component, eventLog []string) {
<!DOCTYPE html>
<html>

<head>
    <title>Dashboard</title>
    <meta charset="UTF-8" />
    <script src="/node_modules/htmx.org/dist/htmx.js"></script>
    <link rel="stylesheet" href="node_modules/@xterm/xterm/css/xterm.css" />
    <script src="node_modules/@xterm/xterm/lib/xterm.js"></script>
    <script src="/static/js/commandline.js"></script>
    <link rel="stylesheet" href="static/css/style.css" />
</head>

<body>
    <div id="Dashboard">
        <div id="EventLog">
            @EventView(eventLog)
        </div>
        <div id="Agents">
            @agentsView
        </div>
        <div id="Commandline"></div>
    </div>
</body>

</html>
}

templ ErrorPage(err string) {
<html>

<head>
    <meta charset="UTF-8" />
    <script src="/node_modules/htmx/htmx.js"></script>
</head>

<body>
    <div>
        <h1 color="red">An unexpected error occured: { err }</h1>
    </div>
</body>

</html>
}
